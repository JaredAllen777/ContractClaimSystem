<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <h1>Contract Monthly Claim System</h1>
        <nav>
            <ul>
                <li><a asp-controller="Claim" asp-action="Index">Submit Claim</a></li>
                <li><a asp-controller="Claim" asp-action="Upload">Upload Documents</a></li>
                <li><a asp-controller="Approval" asp-action="Index">Approve Claims</a></li>
                <li><a asp-controller="Status" asp-action="Index">Track Claim Status</a></li>
            </ul>
        </nav>
    </header>
    <main role="main" class="container">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2024 - Contract Monthly Claim System</p>
    </footer>
</body>
</html>
