<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Contract Monthly Claim System</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/">Contract Monthly Claim System</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Claim" asp-action="Index">Submit Claim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Claim" asp-action="Upload">Upload Documents</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Approval" asp-action="Index">Approve Claims</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Status" asp-action="Index">Track Claim Status</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main role="main" class="container mt-4">
        @RenderBody()
    </main>
    <footer class="bg-dark text-white text-center py-3">
        <p>&copy; 2024 - Contract Monthly Claim System</p>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
